    <!-- nsteps: Number of time steps ex: 100 -->
    <!-- pz: Initial value of momentum in z in eV/c ex: 0.0 -->
    <!-- numpart: Number of initial conditions ex: 10 -->
    <!-- sphere_radius: Sphere radius in SI units (meters) ex: 1.0e-06 -->
    <!-- base_radius: Base of the cylinder radius in SI units (meters) ex: 1.0e-06 -->
    <!-- half_height: Half height of the cylinder in SI units (meters) ex: 5.0e-06 -->
    <!-- initial_z: initial position in z axis of the particles in SI units (meters) ex: -3.0e-07 -->
    <!-- half_length: Half length of the line in SI units (meters) ex: 3.0e-06 -->
