    <comments_and_units>
    <!-- mass: Particle mass in units of electron mass ex: 1.0 -->
    <!-- Q: Particle charge in units of electron charge ex: -1.0 -->
    <!-- radiation_reation: Radiation reaction model. Must be listed in the RadiationReactionModel enum in MELLOTRON. -->
    <!-- lambda: Wavelength of the beam in SI units (meters) ex: 800.0e-9 -->
    <!-- w0: Beam waist as a multiple of lambda ex: 0.8 -->
    <!-- L: Axial length as a multiple of lambda ex: 0.7 -->
    <!-- energy: Pulse energy, in joules ex: 10.0 -->
    <!-- t_init: Initial time in simulation in seconds ex: -5.0e-12 -->
    <!-- dt: Duration of a time step in seconds ex: 1e-13 -->
    <!-- nsteps: Number of time steps ex: 100 -->
    <!-- pz: Initial value of momentum in z in eV/c ex: 0.0 -->
    <!-- numpart: Number of initial conditions ex: 10 -->
    <!-- sphere_radius: Sphere radius in SI units (meters) ex: 1.0e-06 -->
    <!-- base_radius: Base of the cylinder radius in SI units (meters) ex: 1.0e-06 -->
    <!-- half_height: Half height of the cylinder in SI units (meters) ex: 5.0e-06 -->
    <!-- initial_z: initial position in z axis of the particles in SI units (meters) ex: -3.0e-07 -->
    <!-- half_length: Half length of the line in SI units (meters) ex: 3.0e-06 -->
    </comments_and_units>
</config>