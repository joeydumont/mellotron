        <mass>1.0</mass>
        <Q>-1.0</Q>
        <radiation_reaction>NoRR</radiation_reaction>
    </particle>
    <integration_salamin>
        <lambda>8.0e-7</lambda>
        <w0>1.6</w0>
        <L>13.5</L>
        <energy>20.0</energy>
        <t_init>-1.0e-14</t_init>
        <dt>1.0e-16</dt>
        <nsteps>200</nsteps>
    </integration_salamin>
    <generate_initial_conditions>
        <pz>5109989.461</pz>
        <numpart>360</numpart>
        <sphere>
            <sphere_radius>2.24e-06</sphere_radius>
        </sphere>
        <cylinder>
            <base_radius>2.24e-06</base_radius>
            <half_height>7e-06</half_height>
        </cylinder>
        <line>
            <initial_z>-2.99792458e-6</initial_z>
